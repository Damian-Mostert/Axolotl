// Deep typing test for Axolotl language

// Define a simple union type
type Status = "active" | "inactive" | "pending";

// Define an object type
type User = {
    name: string,
    age: int,
    status: Status
};

// Define an array type with specific elements
type Coordinates = [int, int];

// Define a more complex type with nested objects
type Product = {
    id: int,
    name: string,
    price: float,
    available: bool
};

// Define an array of products
type ProductList = [Product];

// Test literal types
type Direction = "north" | "south" | "east" | "west";
type Priority = 1 | 2 | 3 | 4 | 5;

// Test the types
print("=== Deep Typing Test ===");

// Test Status type
var userStatus: Status = "active";
print("User status:", userStatus);

// Test User type
var user: User = {
    name: "Alice",
    age: 30,
    status: "active"
};
print("User name:", user.name);
print("User age:", user.age);
print("User status:", user.status);

// Test Coordinates type
var position: Coordinates = [10, 20];
print("Position X:", position[0]);
print("Position Y:", position[1]);

// Test Product type
var product: Product = {
    id: 1,
    name: "Laptop",
    price: 999.99,
    available: true
};
print("Product:", product.name, "- $", product.price);

// Test ProductList type
var products: ProductList = [
    {id: 1, name: "Laptop", price: 999.99, available: true},
    {id: 2, name: "Mouse", price: 29.99, available: true}
];
print("First product:", products[0].name);
print("Second product:", products[1].name);

// Test Direction type
var heading: Direction = "north";
print("Heading:", heading);

// Test Priority type
var taskPriority: Priority = 1;
print("Task priority:", taskPriority);

print("=== All tests completed ===");