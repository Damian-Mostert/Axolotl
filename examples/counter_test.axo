print("Current time:", millis());
sleep(1000);
print("After 1 second sleep, current time:", millis());
program myTask(sleep:bool) {
    print("Custom task starting at:", millis());
    if(sleep){
        sleep(2000);
    }
    print("Custom task finished at:", millis());
}
print("Starting custom task...");
myTask(false);
print("Custom task running in background...");
await myTask(true);
print("All done!");