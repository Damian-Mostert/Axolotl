{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    {"open": "{", "close": "}"},
    {"open": "[", "close": "]"},
    {"open": "(", "close": ")"},
    {"open": "\"", "close": "\"", "notIn": ["string"]},
    {"open": "'", "close": "'", "notIn": ["string", "comment"]},
    {"open": "/*", "close": "*/", "notIn": ["string"]}
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*//\\s*#?region\\b",
      "end": "^\\s*//\\s*#?endregion\\b"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([a-zA-Z_$][a-zA-Z0-9_$]*)",
  "indentationRules": {
    "increaseIndentPattern": "^((?!\\/\\/).*)*[\\{\\[]\\s*$|^\\s*(case\\s+.*:|default\\s*:)\\s*$",
    "decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\}\\]].*$|^\\s*(case\\s+.*:|default\\s*:|break\\s*;|continue\\s*;)\\s*$"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*\\/\\*\\*(?!\\/)([^\\*]|\\*(?!\\/))*$",
      "afterText": "^\\s*\\*\\/$",
      "action": {
        "indent": "indentOutdent",
        "appendText": " * "
      }
    },
    {
      "beforeText": "^\\s*\\/\\*\\*(?!\\/)([^\\*]|\\*(?!\\/))*$",
      "action": {
        "indent": "none",
        "appendText": " * "
      }
    },
    {
      "beforeText": "^(\\t|( {2}))*[ \\t]*\\*[ \\t]*[^\\*].*$",
      "action": {
        "indent": "none",
        "appendText": "* "
      }
    },
    {
      "beforeText": "^(\\t|( {2}))*[ \\t]*\\*/\\s*$",
      "action": {
        "indent": "none",
        "removeText": 1
      }
    },
    {
      "beforeText": "^(\\t|( {2}))*[ \\t]*\\*[^/]*\\*/\\s*$",
      "action": {
        "indent": "none",
        "removeText": 1
      }
    }
  ]
}
