{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Axolotl Script",
  "scopeName": "source.axo",
  "fileTypes": ["axo"],
  "patterns": [
    {"include": "#comments"},
    {"include": "#strings"},
    {"include": "#numbers"},
    {"include": "#keywords"},
    {"include": "#import-declarations"},
    {"include": "#export-declarations"},
    {"include": "#type-declarations"},
    {"include": "#function-declarations"},
    {"include": "#program-declarations"},
    {"include": "#variable-declarations"},
    {"include": "#types"},
    {"include": "#operators"},
    {"include": "#builtin-functions"},
    {"include": "#constants"},
    {"include": "#object-literals"},
    {"include": "#array-literals"},
    {"include": "#blocks"},
    {"include": "#identifiers"},
    {"include": "#punctuation"}
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.axo",
          "begin": "//",
          "end": "$",
          "patterns": [
            {
              "name": "comment.line.content.axo",
              "match": ".*"
            }
          ]
        },
        {
          "name": "comment.block.documentation.axo",
          "begin": "^\\s*//\\s*(=+)\\s*$",
          "end": "^\\s*//\\s*(=+)\\s*$",
          "patterns": [
            {
              "name": "comment.line.double-slash.axo",
              "match": "//.*$"
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.axo",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.axo",
              "match": "\\\\[ntr\"\\\\]"
            }
          ]
        },
        {
          "name": "string.quoted.single.axo",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.axo",
              "match": "\\\\[ntr'\\\\]"
            }
          ]
        },
        {
          "name": "string.template.axo",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "constant.character.escape.axo",
              "match": "\\\\[ntr`\\\\$]"
            },
            {
              "name": "meta.template.expression.axo",
              "begin": "\\$\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": {"name": "punctuation.definition.template-expression.begin.axo"}
              },
              "endCaptures": {
                "0": {"name": "punctuation.definition.template-expression.end.axo"}
              },
              "patterns": [
                {"include": "#expression-content"}
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.axo",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.axo",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "type-declarations": {
      "patterns": [
        {
          "name": "meta.type-declaration.axo",
          "begin": "\\b(type)\\s+([A-Z][a-zA-Z0-9_]*)\\s*(=)",
          "beginCaptures": {
            "1": {"name": "keyword.declaration.type.axo"},
            "2": {"name": "entity.name.type.axo"},
            "3": {"name": "keyword.operator.assignment.axo"}
          },
          "end": ";",
          "endCaptures": {
            "0": {"name": "punctuation.terminator.statement.axo"}
          },
          "patterns": [
            {
              "include": "#type-expressions"
            }
          ]
        }
      ]
    },
    "function-declarations": {
      "patterns": [
        {
          "name": "meta.function-declaration.axo",
          "begin": "\\b(func)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\()",
          "beginCaptures": {
            "1": {"name": "keyword.declaration.function.axo"},
            "2": {"name": "entity.name.function.axo"},
            "3": {"name": "punctuation.definition.parameters.begin.axo"}
          },
          "end": "\\)",
          "endCaptures": {
            "0": {"name": "punctuation.definition.parameters.end.axo"}
          },
          "patterns": [
            {
              "include": "#function-parameters"
            }
          ]
        }
      ]
    },
    "program-declarations": {
      "patterns": [
        {
          "name": "meta.program-declaration.axo",
          "begin": "\\b(program)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\()",
          "beginCaptures": {
            "1": {"name": "keyword.declaration.program.axo"},
            "2": {"name": "entity.name.program.axo"},
            "3": {"name": "punctuation.definition.parameters.begin.axo"}
          },
          "end": "\\)",
          "endCaptures": {
            "0": {"name": "punctuation.definition.parameters.end.axo"}
          },
          "patterns": [
            {
              "include": "#function-parameters"
            }
          ]
        }
      ]
    },
    "import-declarations": {
      "patterns": [
        {
          "name": "meta.import.axo",
          "begin": "\\b(import)\\s+",
          "beginCaptures": {
            "1": {"name": "keyword.control.import.axo"}
          },
          "end": ";",
          "endCaptures": {
            "0": {"name": "punctuation.terminator.statement.axo"}
          },
          "patterns": [
            {
              "name": "meta.import.named.axo",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [
                {
                  "name": "variable.other.readwrite.axo",
                  "match": "[a-zA-Z_][a-zA-Z0-9_]*"
                }
              ]
            },
            {
              "name": "keyword.control.from.axo",
              "match": "\\bfrom\\b"
            },
            {
              "name": "string.quoted.double.axo",
              "match": "\"[^\"]*\""
            },
            {
              "name": "variable.other.readwrite.axo",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*"
            }
          ]
        }
      ]
    },
    "export-declarations": {
      "patterns": [
        {
          "name": "meta.export.axo",
          "begin": "\\b(export)\\s+",
          "beginCaptures": {
            "1": {"name": "keyword.control.export.axo"}
          },
          "end": "(?=;|\\{)",
          "patterns": [
            {
              "name": "keyword.other.default.axo",
              "match": "\\bdefault\\b"
            },
            {
              "include": "#keywords"
            }
          ]
        }
      ]
    },
    "variable-declarations": {
      "patterns": [
        {
          "name": "meta.variable-declaration.axo",
          "match": "\\b(var|const)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)\\s*([a-zA-Z_][a-zA-Z0-9_\\[\\]]*)",
          "captures": {
            "1": {"name": "keyword.declaration.variable.axo"},
            "2": {"name": "variable.other.readwrite.axo"},
            "3": {"name": "punctuation.separator.type.axo"},
            "4": {"name": "storage.type.axo"}
          }
        }
      ]
    },
    "function-parameters": {
      "patterns": [
        {
          "name": "meta.parameter.axo",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)\\s*([a-zA-Z_][a-zA-Z0-9_\\[\\]|]*)",
          "captures": {
            "1": {"name": "variable.other.readwrite.axo"},
            "2": {"name": "punctuation.separator.type.axo"},
            "3": {"name": "storage.type.axo"}
          }
        }
      ]
    },
    "type-expressions": {
      "patterns": [
        {
          "name": "meta.type.union.axo",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*|\"[^\"]*\"|\\d+|true|false|\\[[^\\]]*\\]|\\{[^\\}]*\\})\\s*(\\|)\\s*([a-zA-Z_][a-zA-Z0-9_]*|\"[^\"]*\"|\\d+|true|false|\\[[^\\]]*\\]|\\{[^\\}]*\\})",
          "captures": {
            "1": {"name": "storage.type.axo"},
            "2": {"name": "keyword.operator.union.axo"},
            "3": {"name": "storage.type.axo"}
          }
        },
        {
          "name": "meta.type.function.axo",
          "match": "\\(([^\\)]*)\\)\\s*->\\s*([a-zA-Z_][a-zA-Z0-9_\\[\\]]*)",
          "captures": {
            "1": {"name": "variable.parameter.function.axo"},
            "2": {"name": "storage.type.axo"}
          }
        },
        {
          "name": "meta.type.array.axo",
          "begin": "\\[",
          "beginCaptures": {
            "0": {"name": "punctuation.definition.array.begin.axo"}
          },
          "end": "\\]",
          "endCaptures": {
            "0": {"name": "punctuation.definition.array.end.axo"}
          },
          "patterns": [
            {
              "include": "#type-expressions"
            },
            {
              "include": "#types"
            }
          ]
        },
        {
          "name": "meta.type.object.axo",
          "begin": "\\{",
          "beginCaptures": {
            "0": {"name": "punctuation.definition.object.begin.axo"}
          },
          "end": "\\}",
          "endCaptures": {
            "0": {"name": "punctuation.definition.object.end.axo"}
          },
          "patterns": [
            {
              "name": "meta.object-field.axo",
              "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)",
              "captures": {
                "1": {"name": "variable.object-property.axo"},
                "2": {"name": "punctuation.separator.key-value.axo"}
              }
            },
            {
              "include": "#type-expressions"
            },
            {
              "include": "#types"
            }
          ]
        },
        {
          "name": "string.quoted.double.type-literal.axo",
          "match": "\"[^\"]*\""
        },
        {
          "name": "constant.numeric.type-literal.axo",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.language.type-literal.axo",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.switch.axo",
          "match": "\\b(switch)\\b"
        },
        {
          "name": "keyword.control.case.axo",
          "match": "\\b(case|default)\\b"
        },
        {
          "name": "keyword.control.flow.axo",
          "match": "\\b(if|else|while|for|return|break|continue|when|try|catch|finally|throw)\\b"
        },
        {
          "name": "keyword.declaration.axo",
          "match": "\\b(func|var|const|type|program)\\b"
        },
        {
          "name": "keyword.control.import.axo",
          "match": "\\b(import|export|use|from)\\b"
        },
        {
          "name": "keyword.other.axo",
          "match": "\\b(await|typeof)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.axo",
          "match": "\\b(int|float|string|bool|void|any)\\b"
        },
        {
          "name": "storage.type.object.axo",
          "match": "\\b(object)\\b"
        },
        {
          "name": "storage.type.custom.axo",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.axo",
          "match": "->"
        },
        {
          "name": "keyword.operator.comparison.axo",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.axo",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.axo",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.assignment.axo",
          "match": "="
        },
        {
          "name": "keyword.operator.union.axo",
          "match": "\\|"
        }
      ]
    },
    "builtin-functions": {
      "patterns": [
        {
          "name": "support.function.builtin.io.axo",
          "match": "\\b(print|read|write|copy|readDir)\\b"
        },
        {
          "name": "support.function.builtin.array.axo",
          "match": "\\b(len|push|pop|slice|reverse|join|sort|find|includes)\\b"
        },
        {
          "name": "support.function.builtin.string.axo",
          "match": "\\b(substr|toUpper|toLower|indexOf|contains|toString|trim|replace|split|startsWith|endsWith|repeat|charAt|charCodeAt)\\b"
        },
        {
          "name": "support.function.builtin.time.axo",
          "match": "\\b(millis|sleep)\\b"
        },
        {
          "name": "support.function.builtin.type.axo",
          "match": "\\b(typeof|toInt|toFloat|toBool)\\b"
        },
        {
          "name": "support.function.builtin.math.axo",
          "match": "\\b(sin|cos|tan|sqrt|pow|abs|floor|ceil|round|min|max|random|log|log10|exp|asin|acos|atan|atan2|clamp|lerp)\\b"
        },
        {
          "name": "support.function.builtin.utility.axo",
          "match": "\\b(assert|error|keys|values|hasKey|clone|merge)\\b"
        }
      ]
    },
    "blocks": {
      "patterns": [
        {
          "name": "meta.block.axo",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            {"include": "#comments"},
            {"include": "#strings"},
            {"include": "#numbers"},
            {"include": "#keywords"},
            {"include": "#variable-declarations"},
            {"include": "#types"},
            {"include": "#operators"},
            {"include": "#builtin-functions"},
            {"include": "#constants"},
            {"include": "#object-literals"},
            {"include": "#array-literals"},
            {"include": "#blocks"},
            {"include": "#identifiers"}
          ]
        }
      ]
    },
    "object-literals": {
      "patterns": [
        {
          "name": "meta.object-literal.axo",
          "begin": "\\{",
          "beginCaptures": {
            "0": {"name": "punctuation.definition.object.begin.axo"}
          },
          "end": "\\}",
          "endCaptures": {
            "0": {"name": "punctuation.definition.object.end.axo"}
          },
          "patterns": [
            {
              "name": "meta.object-property.axo",
              "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)(?!\\s*[a-zA-Z_][a-zA-Z0-9_\\[\\]]*\\s*[=,)}])",
              "captures": {
                "1": {"name": "variable.other.property.axo"},
                "2": {"name": "punctuation.separator.key-value.axo"}
              }
            },
            {"include": "#comments"},
            {"include": "#strings"},
            {"include": "#numbers"},
            {"include": "#keywords"},
            {"include": "#constants"},
            {"include": "#object-literals"},
            {"include": "#array-literals"},
            {"include": "#identifiers"}
          ]
        }
      ]
    },
    "array-literals": {
      "patterns": [
        {
          "name": "meta.array-literal.axo",
          "begin": "\\[",
          "beginCaptures": {
            "0": {"name": "punctuation.definition.array.begin.axo"}
          },
          "end": "\\]",
          "endCaptures": {
            "0": {"name": "punctuation.definition.array.end.axo"}
          },
          "patterns": [
            {"include": "#comments"},
            {"include": "#strings"},
            {"include": "#numbers"},
            {"include": "#keywords"},
            {"include": "#constants"},
            {"include": "#object-literals"},
            {"include": "#array-literals"},
            {"include": "#identifiers"}
          ]
        }
      ]
    },
    "expression-content": {
      "patterns": [
        {"include": "#comments"},
        {"include": "#strings"},
        {"include": "#numbers"},
        {"include": "#keywords"},
        {"include": "#types"},
        {"include": "#operators"},
        {"include": "#builtin-functions"},
        {"include": "#constants"},
        {
          "name": "variable.other.readwrite.axo",
          "match": "[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.axo",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.axo",
          "match": "\\bnull\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.function.call.axo",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "variable.other.property.axo",
          "match": "(?<=\\.)([a-zA-Z_][a-zA-Z0-9_]*)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.axo",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.array.axo",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.definition.group.axo",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.axo",
          "match": "[;:,.]"
        },
        {
          "name": "punctuation.accessor.axo",
          "match": "\\."
        }
      ]
    }
  }
}
