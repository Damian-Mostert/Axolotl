{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Axolotl",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run Axolotl File",
            "type": "shell",
            "command": "./build/compiler",
            "args": ["${file}"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "axolotl",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^Fatal error: (.*)\\s+\\(line (\\d+), col (\\d+)\\)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 1
                }
            },
            "dependsOn": "Build Axolotl"
        },
        {
            "label": "Run Current Axolotl File",
            "type": "shell",
            "command": "./build/compiler",
            "args": ["${file}"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "axolotl",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^Fatal error: (.*)\\s+File: (.*):(\\d+):(\\d+)$",
                    "file": 2,
                    "line": 3,
                    "column": 4,
                    "message": 1
                }
            },
            "dependsOn": "Build Axolotl"
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "cmake",
            "args": ["-S", ".", "-B", "build", "-DCMAKE_BUILD_TYPE=Release"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        }
    ]
}