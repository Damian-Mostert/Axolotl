// HTTP Server example - works like Node.js http.createServer()

print("Starting server...");

createServer(func(req: object, res: object) -> void {
    print("Request:", req.method, req.url);
    
    if (req.url == "/") {
        res.writeHead(200);
        res.end("<h1>Hello from Axolotl!</h1><p>This is a simple HTTP server.</p>");
    } else if (req.url == "/api/data") {
        res.writeHead(200);
        res.end("{\"message\": \"Hello API\", \"status\": \"success\"}");
    } else if (req.url == "/about") {
        res.writeHead(200);
        res.end("About page - Axolotl HTTP Server");
    } else {
        res.writeHead(404);
        res.end("404 - Not Found");
    }
}, 3000);
